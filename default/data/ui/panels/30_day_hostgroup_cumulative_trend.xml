<panel>
  <title>Monitored Indexing Space by Host Group Over Time (last 30 days)</title>
  <input type="dropdown" token="host_group" searchWhenChanged="true">
    <label>Host Group</label>
    <choice value="All">All hosts</choice>
    <populatingSearch fieldForValue="host_group" fieldForLabel="host_group">| inputlookup fb_host_groups | dedup host_group | sort host_group</populatingSearch>
  </input>
  <chart>
    <option name="link.visible">false</option>
    <option name="charting.chart">area</option>
    <option name="charting.chart.nullValueMode">connect</option>
    <option name="charting.legend.placement">none</option>
    <option name="charting.axisTitleX.text">Time</option>
    <option name="charting.axisTitleY.text">MBytes</option>
    <option name="charting.seriesColors">[0x70A65C]</option>
    <earliestTime>-30d@d</earliestTime>
    <searchString>host_group="$host_group$" `_fb_summary_recs(*)` | timechart sum(sizeOnDiskMB) AS MBytes</searchString>
    <drilldown>
      <link>/app/fire_brigade/retention_size</link>
    </drilldown>
  </chart>
</panel>
