<dashboard>
  <label>Troubleshoot Fire Brigade (Distributed)</label>

  <row>
    <html>
<div id="fire_brigade_help">
</div>
    </html>
  </row>

  <row>
    <panel>
      <single>
	<title>Search Peers Found</title>
        <!-- splunk_server=* to get around default search groups in
	     case we're on a DMC host -->
	<search id="rest_count">
	  <query>| rest /services/server/info splunk_server=* | stats count</query>
	</search>
        <option name="underLabel">Total</option>
      </single>
      <single>
        <option name="field">count</option>
	<search>
	  <query>| rest /services/server/info splunk_server=* | search server_roles=indexer | stats count</query>
	</search>
        <option name="underLabel">Indexers</option>
      </single>
    </panel>

    <panel>
      <single>
	<title>Configuration Mode</title>
	<option name="field">mode</option>
	<search base="rest_count">
	  <query>eval mode=if(count > 1, "Distributed", "Standalone")</query>
	</search>
	<!-- drilldown from here to the right dash? -->
      </single>
    </panel>

    <panel>
      <single>
	<title>TA installed?</title>
	<option name="field">Final</option>
	<option name="underLabel">Indexers</option>
	<search>
	  <query>| rest /services/server/info splunk_server=* | search server_roles=indexer | join type=left splunk_server [| rest /services/apps/local splunk_server=* | search title="TA-fire_brigade" | fields splunk_server, title | rename title AS app ] | stats count AS total, count(eval(if(isnotnull(title), title, null()))) AS installed | eval Final=installed . " / " . total</query>
	</search>
      </single>	    
    </panel>
  </row>

  <row>
    <panel>
      <single>
	<title>"DB inspection" Events Found</title>
	<option name="field">totalCount</option>
	<search id="metadata">
	  <query>| metadata type=sources index=summary |search source="DB inspection"</query>
	</search>
      </single>
    </panel>

    <panel>
      <single>
	<title>Most Recent "DB inspection" Event</title>
	<option name="field">last</option>
	<option name="underlabel">Local Time</option>
	<search base="metadata">
	  <query>| convert ctime(*Time) AS *</query>
	</search>
      </single>
    </panel>

    <panel>
      <single>
	<title>Events Found Since "Today"</title>
	<search>
	  <query>`fb_data_from_today` index=summary source="DB inspection" | stats count
	  </query>
	</search>
      </single>
    </panel>
  </row>

</dashboard>
