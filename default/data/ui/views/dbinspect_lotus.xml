<form class="formsearch">
  <label>The flower of unfolding - dbinspect</label>

  <row grouping="1,2,1">
    <single id="dbinspect_lotus_current_state">
      <option name="field">label</option>
      <option name="underLabel">click here</option>
      <searchString>| stats count | eval label="Current State"</searchString>
      <drilldown>
        <set token="current">yes</set>
        <unset token="thirty_day"/>
        <unset token="sixty_day"/>
	</drilldown>
    </single>
    <single>
      <option name="field">label</option>
      <option name="underLabel">click here</option>
      <searchString>| stats count | eval label="Thirty Day Trend"</searchString>
      <drilldown>
        <unset token="current"/>
        <set token="thirty_day">yes</set>
        <unset token="sixty_day"/>
	</drilldown>
    </single>
    <single>
      <option name="field">label</option>
      <option name="underLabel">click here</option>
      <searchString>| stats count | eval label="Sixty Day Trend"</searchString>
      <drilldown>
        <unset token="current"/>
        <unset token="thirty_day"/>
        <set token="sixty_day">yes</set>
	</drilldown>
    </single>
    <single>
      <option name="field">label</option>
      <option name="underLabel">click here</option>
      <searchString>| stats count | eval label="Reset"</searchString>
      <drilldown>
        <unset token="current"/>
        <unset token="thirty_day"/>
        <unset token="sixty_day"/>
	</drilldown>
    </single>
  </row>


  <row>
    <panel>
      <table depends="$current$">
        <title>Select a Host</title>
        <searchString>
| inputlookup fb_hostname_index_cache | dedup orig_host
| sort orig_host | fields orig_host
	</searchString>
	<drilldown>
          <set token="server_host">$row.orig_host$</set>
	</drilldown>
      </table>
      <table depends="$thirty_day$">
        <title>Select a Host</title>
        <searchString>
| inputlookup fb_hostname_index_cache | dedup orig_host
| sort orig_host | fields orig_host
	</searchString>
	<drilldown>
          <set token="server_host">$row.orig_host$</set>
	</drilldown>
      </table>
      <table depends="$sixty_day$">
        <title>Select a Host</title>
        <searchString>
| inputlookup fb_hostname_index_cache | dedup orig_host
| sort orig_host | fields orig_host
	</searchString>
	<drilldown>
          <set token="server_host">$row.orig_host$</set>
	</drilldown>
      </table>
      <table depends="$count_based$">
        <title>Select a Host</title>
        <searchString>
| inputlookup fb_hostname_index_cache | dedup orig_host
| sort orig_host | fields orig_host
	</searchString>
	<drilldown>
          <set token="server_host">$row.orig_host$</set>
	</drilldown>
      </table>
    </panel>
    <panel>
      <table depends="$server_host$">
        <title>Select an Index</title>
        <searchString>
| inputlookup fb_hostname_index_cache | search orig_host=$server_host$
| dedup orig_index | sort orig_index | table orig_index
        </searchString>
        <drilldown>
          <set token="index_index">$row.orig_index$</set>
        </drilldown>
      </table>
    </panel>
  </row>

